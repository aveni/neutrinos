<div class="page-header">
	<h1>#<%= @team.show_team %></h1>
</div>

<h3>High Score: <%= highScore(@team) %></h3>
<h3>Average Score: <%= avgScore(@team) %></h3>
<h3>Win Percentage: <%= winPerc(@team) %>%</h3>
<h3>Average Contribution: <%= avgCont(@team) %></h3>



<br>
<br>
<h4 class="text-center">Matches for <%= @team.name %></h4><br>
<table class='table table-striped table-hover'>
  <thead>
    <th>Match #</th>
    <th><%= red("Red 1") %></th>
    <th><%= red("Red 2") %></th>
    <th><%= blue("Blue 1") %></th>
    <th><%= blue("Blue 2") %></th>
    <th><%= red("Red") %></th>
    <th><%= blue("Blue") %></th>
  </thead>

<% matches = getMatches(@team).order(:number) %>

  <tbody>
    <%= render matches %>
  </tbody>
</table>

<br>
<br>
<div class="row text-right">
	<%= link_to fa_icon('pencil', text:'Edit Team'), edit_team_path(@team), class:'btn btn-default' %> 
	<%= link_to fa_icon('trash-o', text:'Destroy Team'), @team, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
</div>