<div class="page-header">
	<h1>#<%= @team.show_team %></h1>
</div>

<br>
<h4>Matches for <%= @team.name %></h4>
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th colspan="7"></th>
    </tr>
    <th>Match Number</th>
    <th><%= red("Red 1") %></th>
    <th><%= red("Red 2") %></th>
    <th><%= blue("Blue 1") %></th>
    <th><%= blue("Blue 2") %></th>
    <th><%= red("Red") %></th>
    <th><%= blue("Blue") %></th>
  </thead>

<% matches = getMatches(@team).order(:number) %>

  <tbody>
    <%= render matches %>
  </tbody>
</table>

<br>
<br>
<div class="row text-right">
	<%= link_to fa_icon('pencil', text:'Edit Team'), edit_team_path(@team), class:'btn btn-default' %> 
	<%= link_to fa_icon('trash-o', text:'Destroy Team'), @team, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
</div>