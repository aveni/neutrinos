<div class="page-header">
	<h1><%= @event.name %></h1>
  <h3><%= show_date(@event) %> &nbsp; <%= show_level(@event) %></h3>
</div>
<br>

<h2>Competing Teams</h2>
<% if current_user && (current_user.is?(:neutrinos) || current_user.is?(:admin)) %>
<table id="teams_table1" class="display">
  <thead>
    <tr>
      <th>Team #</th>
      <th>Name</th>
      <th>High Score</th>
      <th>Avg Score</th>
      <th>St Dev</th>
      <th>Avg Cont</th>
      <th>OPR</th>
      <th># Matches</th>
      <th>QP</th>
      <th>Win %</th>
    </tr>
  </thead>

  <tbody>
    <% @event.participations.includes(:team).each do |p| %>
      <% t = p.team %>
      <tr>
        <td><%= t.number %></td>
        <td> <a href="<%= team_path(t) %>" style=" text-decoration: none;"> <%= t.name %></a></td>
        <td><%= p.high_score %></td>
        <td><%= p.avg_score %></td>
        <td><%= p.st_dev %></td>
        <td><%= p.avg_cont %></td>
        <td><%= p.opr.round(1) %></td>
        <td><%= "#{p.curMatches}/#{p.numMatches}" %></td>
        <td><%= p.qp %></td>
        <td><%= p.win_perc %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table id="teams_table2" class="display">
  <thead>
    <tr>
      <th>Team #</th>
      <th>Name</th>
      <th>High Score</th>
      <th># Matches</th>
      <th>QP</th>
      <th>Win %</th>
    </tr>
  </thead>
  <tbody>
    <% @event.participations.includes(:team).each do |p| %>
      <% t = p.team %>
      <tr>
        <td><%= t.number %></td>
        <td> <a href="<%= team_path(t) %>" style=" text-decoration: none;"> <%= t.name %></a></td>
        <td><%= p.high_score %></td>
        <td><%= "#{p.curMatches}/#{p.numMatches}" %></td>
        <td><%= p.qp %></td>
        <td><%= p.win_perc %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<script>
$(document).ready(
  function() {
    $('#teams_table1').DataTable({
        "order": [[ 6, "desc" ]],
        "paging": false,
         "scrollY":"600px",
         "scrollCollapse": true
    })
  }
  )
</script>

<script>
$(document).ready(
  function() {
    $('#teams_table2').DataTable({
        "order": [[ 4, "desc" ]],
        "paging": false,
         "scrollY":"600px",
         "scrollCollapse": true
    })
  }
  )
</script>

<br><br><br>
<% if can? :create, Match%>
<div class="text-right">
  <%= link_to 'New Match', new_event_match_path(@event), class:'btn btn-primary' %> 
</div>
<% end %>
<h2>Matches</h2>
<table id="matches_table" class = "display">
  <thead>
  <tr>
    <th>Match #</th>
    <th><%= red("Red 1") %></th>
    <th><%= red("Red 2") %></th>
    <th><%= blue("Blue 1") %></th>
    <th><%= blue("Blue 2") %></th>
    <th><%= red("Red") %></th>
    <th><%= blue("Blue") %></th>
  </tr>
  </thead>
  <tbody>
    <%= render @event.matches.includes(:red1, :red2, :blue1, :blue2).order(number: :asc) %>
  </tbody>
</table>

<script>
$(document).ready(
  function() {
    $('#matches_table').DataTable({
        "ordering": false,
        "paging": false,
         "scrollY":"600px",
         "scrollCollapse": true
    })
  }
  )
</script>

<br>
<br>
<div class="row text-right">
	<%= link_to fa_icon('pencil', text:'Edit Event'), edit_event_path(@event), class:'btn btn-default' if can? :modify, Event%> 
	<%= link_to fa_icon('trash-o', text:'Destroy Event'), @event, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' if can? :destroy, Event%>
</div>