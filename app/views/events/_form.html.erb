<div class="row col-md-10 col-md-ofset-1">

	<h1><%= controller.action_name.capitalize %> Event </h1>
	<br>
	<%= simple_form_for(@event, html:{class:'form-horizontal'}, wrapper: :horizontal_form) do |f| %>

		<% f.error_notification %>
		<%= f.input :name %>
		<%= f.input :month, collection: 1..12  %>
		<%= f.input :day, collection: 1..31 %>
		<%= f.input :year %>
		<%= f.input :level, collection: LEVELS %>


		
		<div class="row text-right" %>
			<%= f.submit nil, class:'btn btn-primary'%>
			<%= link_to 'Cancel', :back, class:'btn btn-default' %>
		</div>
	<% end %>
</div>