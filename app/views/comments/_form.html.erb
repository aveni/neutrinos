<div class="row col-md-10 col-md-ofset-1">

	<h1><%= controller.action_name.capitalize %> Comment </h1>
	<br>
	<%= simple_form_for(@comment, html:{class:'form-horizontal'}, wrapper: :horizontal_form) do |f| %>

		<% f.error_notification %>
		<%= f.hidden_field :commentable_type %>
		<%= f.hidden_field :commentable_id %>

		<%= f.input :body %>
		<%= f.input :author %>



		
		<div class="row text-right" %>
			<%= f.submit nil, class:'btn btn-primary'%>
			<%= link_to 'Cancel', :back, class:'btn btn-default' %>
		</div>
	<% end %>
</div>