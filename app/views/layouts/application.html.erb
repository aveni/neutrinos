<!DOCTYPE html>
<html>
<head>
  <title>Subatomic Scouting</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-62132120-1', 'auto');
    ga('send', 'pageview');

  </script>
</head>
<body>
<div id="wrap">

<nav class="navbar navbar-default" role="navigation">
<div class="container-fluid">

	<div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
  	<a class="navbar-brand" href= <%= root_url %>>
  		Subatomic Scouting
      <% if current_user != nil %>
       &nbsp; <%= show_role(current_user) %>
      <% end %>
    </a>
  </div>

	<div class="collapse navbar-collapse" id="navbar">
		<ul class="nav navbar-nav navbar-right">
      <li><%= link_to 'Worlds 2015', root_path %></li>
			<li><%= link_to 'FTC Teams', teams_path %></li>
			<li><%= link_to 'Past Events', events_path %></li>
			<% if user_signed_in? %>
				<li><%= link_to 'Sign out', destroy_user_session_path, :method=>:delete %></li>
			<% else %>
				<li><%= link_to 'Sign in', new_user_session_path %></li>						
			<% end %>
		</ul>
	</div>

</div> <!-- container-fluid -->
</nav>


<div class="container">
  <% if notice %>
    <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
    </div>
  <% end %>

	<%= yield %>
	<br><br>
</div>

</div>

<%= render "/layouts/footer" %>

</body>
</html>
